.cart-list{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2002;
  width: 90%;
  margin: 0 auto;
  border-radius: 4px;
  border: 1px solid #ebeef5;
  box-sizing: border-box;
  box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
  overflow-x: hidden;
  overflow-y: scroll;
}